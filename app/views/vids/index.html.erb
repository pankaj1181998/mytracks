<p id="notice"><%= notice %></p>

<h1>Vids</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Vid link</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vids.each do |vid| %>
      <tr>
        <td><%= vid.title %></td>
        <td><%= vid.vid_link %></td>
        <td><%= vid.image %></td>
        <td><%= link_to 'Show', vid %></td>
        <td><%= link_to 'Edit', edit_vid_path(vid) %></td>
        <td><%= link_to 'Destroy', vid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

